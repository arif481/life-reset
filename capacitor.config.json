{
  "appId": "com.lifereset.app",
  "appName": "Life Reset",
  "webDir": "www",
  "server": {
    "androidScheme": "https",
    "cleartext": false
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "appendUserAgent": "LifeResetApp"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#4361ee",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "Browser": {
      "androidToolbarColor": "#4361ee"
    }
  }
}
